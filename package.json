{
  "name": "orbo-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Minimal, lazy-initialized global state for React. Zero nested providers, true bundle splitting, useState-familiar API.",
  "author": "Jan Nicklas",
  "license": "MIT",
  "homepage": "https://github.com/DigitecGalaxus/orbo#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DigitecGalaxus/orbo.git"
  },
  "bugs": {
    "url": "https://github.com/DigitecGalaxus/orbo/issues"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev:example:base": "pnpm --filter orbo-example-base dev",
    "dev:example:suspense": "pnpm --filter orbo-example-suspense dev",
    "test": "pnpm --filter orbo test",
    "test:run": "pnpm --filter orbo test:run",
    "test:e2e": "pnpm --filter orbo-e2e test",
    "typecheck": "pnpm -r typecheck",
    "prettier": "pnpm run --recursive --if-present prettier",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "typescript": "^5.9.2"
  }
}
