{
  "name": "orbo",
  "version": "3.5.1",
  "description": "Minimal, lazy-initialized global state for React. Zero nested providers, true bundle splitting, useState-familiar API",
  "author": "Jan Nicklas",
  "license": "MIT",
  "homepage": "https://github.com/DigitecGalaxus/orbo#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DigitecGalaxus/orbo.git",
    "directory": "packages/orbo"
  },
  "bugs": {
    "url": "https://github.com/DigitecGalaxus/orbo/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "development": "./dist/index.development.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --write \"./src/**/*.{ts,tsx,js,jsx}\""
  },
  "keywords": [
    "react",
    "state",
    "global",
    "typescript",
    "ssr",
    "hooks",
    "bundle-splitting",
    "performance",
    "zero-dependencies"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.1.0",
    "@types/node": "24.3.3",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.2",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.0.0"
  },
  "sideEffects": false
}
